{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
            {
                "label": "build main",
                "type": "shell",
                "command": "g++",
                "args": [
                    "-g",
                    "main.c"
                ]
            },
            {
                "label": "build parser",
                "type": "shell",
                "command": "bison",
                "args": [
                    "-v",
                    "-d",
                    "parser.y"
                ],
                "problemMatcher": []
            },
            {
                "label": "build scanner",
                "type": "shell",
                "command": "flex",
                "args": [
                    "scanner.l"
                ],
                "problemMatcher": []
            },
            {
                "label": "compile bison and flex",
                "type": "shell",
                "command": "gcc",
                "args": [
                    "-o",
                    "etapa2.exe",
                    "main.c",
                    "parser.tab.c",
                    "lex.yy.c",
                    "-lfl"
                ],
                "dependsOn": [
                    "build parser",
                    "build scanner"
                ],
                "problemMatcher": [],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        ]
    }