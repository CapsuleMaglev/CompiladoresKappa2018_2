{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
            {
                "label": "build main",
                "type": "shell",
                "command": "g++",
                "args": [
                    "-g",
                    "main.c"
                ],

            },
            {
                "label": "build scanner",
                "type": "shell",
                "command": "flex",
                "args": [
                    "scanner.l"
                ],
                "problemMatcher": []
            },
            {
                "label": "compile flex scanner",
                "type": "shell",
                "command": "gcc",
                "args": [
                    "-o", "etapa1", "main.c", "lex.yy.c", "-lfl"
                ],
                "dependsOn": "build scanner",
                "problemMatcher": [],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        ]
    }